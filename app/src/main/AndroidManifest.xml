<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hmo">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HMO">
        <activity android:name=".ClientsPanel"></activity>
        <activity android:name=".SetAppointment" />
        <activity android:name=".ConfirmAppointment" />
        <activity android:name=".BookAppointment" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Registration" />
        <activity android:name=".MainLogin" />
        <activity android:name=".Management" />
        <activity android:name=".DoctorsPanel" />
        <activity android:name=".DoctorLogin" />
        <activity android:name=".ClientLogin" />
        <activity android:name=".MailUserActivity" />
        <activity android:name=".SendMassageActivity" />
    </application>

</manifest>